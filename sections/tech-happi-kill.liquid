<style>
.how__does__happi__kill_container {
    margin-left: 8%;
    margin-right: 8%;
}
.kill__text {
    margin-top: 6%;
}
.happi__working__container {
    position: relative;
}
.happi__kill_image__container img {
    width: 100%;
}
.happi__kill_image__container {
    width: 60%;
}
.happi_image_1_txt {
    position: absolute;
    width: 31%;
    right: 5%;
    bottom: 5%;
}
.happi__2_working__container {
    margin-top: 5%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
}
.happi_2__working__txt {
    width: 20%;
}
.happi_2__kill_image__container img {
    width: 100%;
}
.happi_2__kill_image__container {
