<footer>
    <div class="footer__top">
    <div class="subscribe__form">
        <input type="text" placeholder="subscribe to our newsletter" />
        <button>submit</button>
    </div>
    <div class="follow__us">
        <p>Follow Us!</p>
        <img
        src="{{ section.settings.follow__image | img_url: '1920x' }}"
        alt=""
        />
    </div>
    </div>
    <div class="border__botom"></div>

    <div class="fotter__middle">
        {% for block in section.blocks %}
            <div class="about">
            <h2>{{ block.settings.title }}</h2>
            {% case block.type %}
                {% when "link_list" %}
                {% assign footer__menu = block.settings.menu %}
                <ul>
                    {% for menu_link in linklists[footer__menu].links %}
                        <li>
                            <a href="{{ menu_link.url }}">{{ menu_link.title | escape }}</a>
                        </li>
                    {% endfor %}
                </ul>    
                {% else %}
                <p>{{ block.settings.text_1 }}</p>
                <p>{{ block.settings.text_2 }}</p>
                <p>{{ block.settings.text_3 }}</p>
                <p>{{ block.settings.text_4 }}</p>
            {% endcase %} 
            </div>
        {% endfor %}
    </div>

    <div class="border__botom"></div>

    <div class="fotter__bttom">
    <h3>Â© 2020, Breathe Happi</h3>
    <div class="footer__img__container">
        <img src="{{ section.settings.fotter__bttom__img | img_url: '1920x' }}" alt="" />
    </div>
    <p><a href="">Terms of use </a></p>
    <p><a href="">Privacy policy</a></p>
    </div>
</footer>

{% schema %}
    {
        "name":"fotter",
        "settings": [
            {
                "type": "image_picker",
                "id": "follow__image",
                "label": "Follow us image"
            },
            {
                "type": "image_picker",
                "id": "fotter__bttom__img",
                "label": "Footer bootom image"
            }
        ],

        "max_blocks": 4,
        "blocks":[
            {
                "type": "link_list",
                "name": "Menu Block",
                "settings":[
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title"   
                    },
                    {
                        "type": "link_list",
                        "id": "menu",
                        "label": "Select Menu"
                    }
                ]
             },
             {
                 "type": "text",
                 "name":"Text Block",
                 "settings":[
                     {
                        "type": "text",
                        "id": "text_1",
                        "label": "Text 1"
                    },
                    {
                        "type": "text",
                        "id": "text_2",
                        "label": "Text 2"
                    },
                    {
                        "type": "text",
                        "id": "text_3",
                        "label": "Text 3"
                    },
                    {
                        "type": "text",
                        "id": "text_4",
                        "label": "Text 4"
                    }
                 ]
             }
         ]
    }
{% endschema %}


