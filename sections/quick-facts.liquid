<style>
.quick__facts__section {
    background: #cdf9f6;
    padding-top: 1%;
    padding-bottom: 5%;
    margin-top: 4%;
}
.quick__related__block__container {
    margin-left: 8%;
    margin-right: 8%;
    margin-top: 5%;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    align-items: center;
}
.quick_facts__card {
    width: 32%;
}

.quick_facts__card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    
}

.qiock_img__container {
    width: 40%;
}
.qiock_img__container img {
    width: 100%;
}
.image__txt__container {
    border-right: 2px solid black;
    padding-right: 10%;
    padding-left: 4%;
    padding-top: 4%;
}

@media screen and (max-width: 780px)  {
    .quick_facts__card {
        display: flex !important;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
    }
}
</style>

<section class="quick__facts__section">
    <div class="happi__header__text">
        {% comment %} <h3 class="section__title">{{ section.settings.happi_title }}</h3> {% endcomment %}
        <h3 class="section_title">Quick Facts</h3>
    </div>
    <div class="quick__related__block__container">
        {% for block in section.blocks %}
            <div class="quick_facts__card">
                <div class="qiock_img__container">
                    <img src="{{ block.settings.quick_image | img_url: 'master' }}" alt="">
                </div>
                <div class="image__txt__container">
                    <h3>{{ block.settings.title }}</h3>
                    <p>{{ block.settings.txt }}</p>
                </div>

            </div>
        {% endfor %}
    </div>
</section>


{% schema %}
    {
        "name": "quick facts",
        "blocks":[
                {
                    "type": "happi_protect",
                    "name": "Happi Protect",
                    "settings":[
                        {
                            "type": "image_picker",
                            "id": "quick_image",
                            "label": "Quick Image"
                        },
                        {
                            "type": "text",
                            "id": "title",
                            "label": "Title"   
                        },
                        {
                            "type": "text",
                            "id": "txt",
                            "label": "Text"   
                        }
                        
                    ]
                 }
        ]
    }
{% endschema %}